                                use(xlink:href='../static/img/common/svg/svg-symbols.svg#arrow-circle')

                          .form
                              a.btn.btn--primary.btn--fluid.btn--icon(href='buscar-propiedad.html')
                                span Nota simple
                                svg.icon.rotate-180
                                  use(xlink:href='../static/img/common/svg/svg-symbols.svg#arrow-circle')

                          ul.list.list--secondary
                            li.list__item
                              a.link(href='#') Nota de localización
                            li.list__item
                              a.link(href='#') Alertas de seguimiento
                            li.list__item
                              a.link(href='#') Certificación de dominio
