extends includes/_tpl-base.pug

block title
  title Recargar saldo

block body

  - var headerMenu = false

  - var menuLinks = false
  - var user_item1 = 'active'

  - var topbar = 'topbar--dark'
  - var topbarTitle = 'Solicitud de nota localización'
  - var topbarSteps = [{num: "1", state: "list__item--active"}, {num: "2", state: ""}]

  - var footer = 'footer'


  body

    .main-global

      include includes/_tpl-header.pug

      include includes/_tpl-topbar.pug


      main.main-content

        .main-content__wrap

          h1.title-page Recargar saldo

          .panel-row
            .panel--col


              .row
                .gen-msg.gen-msg--info.mt--30
                  .gen-msg__text
                    h1 ¿Cómo funciona el monedero?
                    p Los pagos de tus solicitudes se realizarán a través de un depósito asociado a tu cuenta, el monedero. Solo tienes que recargar dinero en tu monedero y realizar tus pedidos de información.
                    p
                     a.link Más información

                  svg.gen-msg__icon
                    use(xlink:href='../static/img/common/svg/svg-symbols.svg#info-circle')


              h2.title-mod Recarga tu monedero

              p Para formalizar el alta debes realizar una recarga mínima de 100€.


              .row

                .form.grid-a-12.form--inline
                  form(autocomplete="off",action="portada-propiedad.html")
                    .form-options
                      .form-box
                        label.label(for='saldo-act') Saldo actual
                        .form-box--right
                          input.input.input--flat.fs-16#saldo-act(type='text', value="0€", readonly)

                      .form-box
                        label.label(for='imp-rec') Importe a recargar
                        .form-box--right.quantity

                          .quantity__field
                            input.input.quantity__input#imp-rec(type='text',placeholder='Introduzca el importe', value="100")
                            <span class="currency">€</span>

                          .quantity__links
                            a.link.link +50€
                            a.link +100€

                          .form-text Recuerda que el importe que no gastes lo puedes reembolsar.

                      .form-box
                        label.label(for='saldo-fin') Saldo final
                        .form-box--right
                          input.input.input--flat.fs-16#saldo-fin(type='text', value="100€", readonly)

                      .form-box                      
                        //- nota: solo visible para certificaciones
                        label.label(for='metodo-recarga') Método de recarga
                        .form-box--right                                                  
                          .form-ico.form-ico--select
                            select#metodo-recarga.select
                              option Tarjeta bancaria (Visa, Mastercard, American Express)
                              option Tarjeta Bancaria Maestro
                              option Paypal
                            svg.icon
                              use(xlink:href='../static/img/common/svg/svg-symbols.svg#arrow-down')                    

                    .form-action.btn-group
                      button.btn.btn--primary.btn--medium Recargar
                      button.btn.btn--secondary.btn--medium Cancelar



      include includes/_tpl-footer.pug
