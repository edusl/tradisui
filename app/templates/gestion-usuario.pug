                      svg.icon
                        use(xlink:href='../static/img/common/svg/svg-symbols.svg#arrow-down')

                  .rb-group.rb-group--horizontal.rb-group--line
                    fieldset
                      legend Permisos
                      .rb-option.grid-a-12.grid-b-6
                        label.rb-label(for='radioh1')
                          input#radioh1.invisible.radiobutton(type='radio',name='radioh',checked)
                          span.rb-pick
                          span.rb-text Usuario
                          span.rb-line


                      .rb-option.grid-a-12.grid-b-6
                        label.rb-label(for='radioh2')
                          input#radioh2.invisible.radiobutton(type='radio',name='radioh')
                          span.rb-pick
                          span.rb-text Administrador
                          span.rb-line
                        a.modal-lateral-open(data-content='modal01', href="#modal01", title="Mostrar ayuda")
                          svg.icon.rb-icon.primary
                            title Mostrar ayuda
                            use(xlink:href='../static/img/common/svg/svg-symbols.svg#help-circle')

                .form-action.btn-group
                  button.btn.btn--primary.btn--medium Guardar
                  button.btn.btn--secondary.btn--medium Cancelar


                .hide
                  .modal01
                    h1.modal-title.modal-title--icon
